{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                             
    "module": "CommonJS",                           
    "lib": ["ES2020"],                              
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                 
    "skipLibCheck": true,                           

    /* Module Resolution */
    "moduleResolution": "node",                     
    "resolveJsonModule": true,                      
    "rootDir": "src",                              
    "outDir": "dist",                               

    /* Helpful for dev */
    "sourceMap": true                               
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
